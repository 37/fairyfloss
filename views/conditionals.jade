extends layout

block content
	h1 Fairyfloss
	p Click and customise conditionals to your hearts content.
	.clearline

	h3 Demo
	
	.column13.accordion
		h4 Elements
		#elementbox.accordion-section
			a.elementbox__button.accordion-section-title(href="#accordion-inputs") Input Fields
				i.fa.fa-plus.float-right
			#accordion-inputs.accordion-section-content
				button(onClick="add_textbox('section0')")
					i.fa.fa-pencil
					p Textbox

				button(onClick="add_textarea('section0')")
					i.fa.fa-pencil-square-o
					p Textarea

				button(onClick="add_checkbox_base('section0')")
					i.fa.fa-square
					p Checkbox

				button(onClick="add_radio_base('section0')")
					i.fa.fa-dot-circle-o
					p Radio

				button(onClick="add_dropdown_base('section0')")
					i.fa.fa-bars
					p Dropdown

				button(onClick="add_uploader('section0')")
					i.fa.fa-cloud-upload
					p Upload

			a.elementbox__button.accordion-section-title(href="#accordion-static") Static fields
				i.fa.fa-plus.float-right
			#accordion-static.accordion-section-content
				button(onClick="add_static('section0', 'text', 'title', 'text-title', 'pencil', '#')")
					i.fa.fa-header
					p Title

				button(onClick="add_static('section0', 'textarea', 'content', 'text-content', 'pencil', '#')")
					i.fa.fa-info
					p text

				button.elementbox__button 
					i.fa.fa-table
					p Table
				.clear
				- var grid = 0
				- var col1 = [0, 1]
				div.table-generator
					while grid < 36
						.gridbox(id="box#{grid}", onmouseover="gridHoverStyle(#{grid})", onClick="add_table('section0', '#{grid}', 'table', 'text-content', 'pencil', '#')")
						- grid++

				button(onClick="add_file('section0')")
					i.fa.fa-picture-o
					p Images

				button(onClick="add_list_base('section0')") 
					i.fa.fa-list
					p List

			a.elementbox__button.accordion-section-title(href="#accordion-section") Add Section
				i.fa.fa-plus.float-right
			#accordion-section.accordion-section-content
				button(onClick='#')
					i.fa.fa-plus-square-o
					p New Section



	.column23
		h4 Form
		#formbox
			#section0.section.accordion

	script(type='text/javascript', src='/javascripts/jquery.accordion.js')